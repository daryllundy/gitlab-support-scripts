# Environment variables for Docker Compose
# Copy this file to .env and update values as needed

# GitLab instance URL
GITLAB_URL=https://gitlab.example.com

# GitLab admin access token (required for API-based scripts)
# Generate at: https://gitlab.example.com/-/profile/personal_access_tokens
# Required scopes: api, read_api, read_repository
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# Local backup directory to mount (for backup verification)
BACKUP_DIR=./backups

# Monitoring check interval (seconds)
CHECK_INTERVAL=3600